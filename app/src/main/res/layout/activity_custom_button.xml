<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mk.workdemo.activities.CustomButtonActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.mk.workdemo.customView.DrawableRadioButton
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/iv_device_manage_b"
            android:gravity="center"
            android:text="jim"
            app:radio_top_height="50dp"
            app:radio_top_width="50dp"  />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue3" />

        <com.mk.workdemo.customView.DrawableRadioButton
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/iv_device_manage_b"
            android:text="jim"
            app:radio_left_height="50dp"
            app:radio_left_width="50dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue3" />

        <com.mk.workdemo.customView.DrawableRadioButton
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/iv_device_manage_b"
            android:text="jim"
            app:radio_bottom_height="10dp"
            app:radio_right_width="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue3" />

        <com.mk.workdemo.customView.DrawableRadioButton
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/iv_device_manage_b"
            android:text="jim"
            app:radio_bottom_height="10dp"
            app:radio_right_width="20dp" />
        <RadioButton
            android:drawableTop="@drawable/iv_device_manage_b"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue3" />
</LinearLayout>
